            <legend> <%=title%></legend> 
            
            <div>
            <label for id="cpf">CPF:</label>
            <input type="text" name="cpf" id="cpf" placeholder="Ex 129.225.964-89" required>
            </div>

            <div>
            <label for id="nome">Digite seu nome:</label>
            <input type="text" name="nome" id="nome" placeholder="Ex Samuel" required>
            </div>

            <div>
            <label for id="idade">Digite a sua idade:</label>
            <input type="text" name="idade" id="idade" placeholder="Ex 19" required>
            </div>

            <div>
            <label for id="endereco">Digite o seu endere√ßo:</label>
            <input type="text" name=" endereco" id="endereco" placeholder="Ex rua laurentino maia" required>
            </div>

            <button type="submit"> Cadrastrar Usuarios</button>
            
        </fieldset>
</form>
<script src="/javascripts/updateuser.js">
</script>
</body>
</html>